---
const url:string = Astro.url.href;
const title:string = new URL(Astro.request.url).searchParams.get("search") || "";
---

<nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Flictnime</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class={`nav-link ${url.includes("episode") ? "active" : ""}`} href="/episode">Episode</a>
          </li>
          <li class="nav-item">
            <a class={`nav-link ${url.includes("anime") ? "active" : ""}`} href="/anime">Anime</a>
          </li>
          <li class="nav-item">
            <a class={`nav-link ${url.includes("genre") ? "active" : ""}`} href="/genre">Genre</a>
          </li>
        </ul>
        <form action="/anime" class="d-flex" role="search">
          <input class="form-control me-2" type="search" value={title} name="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-light" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>