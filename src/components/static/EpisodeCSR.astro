---
import Pagination from "../dynamic/Pagination.astro";

const page:number = parseInt(new URL(Astro.request.url).searchParams.get("page") ?? "1") || 1;
---
<div class="row mt-3" id="list_episode">
    {(new Array(16).fill(0)).map(() => {
        return <div class="col-12 col-md-3 my-1 mb-3">
            <div class="card shadow h-100 text-decoration-none" >
                <svg class="bd-placeholder-img card-img-top min-height-card" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#868e96"></rect></svg>
                <div class="card-body">
                    <h5 class="card-title placeholder-glow">
                        <span class="placeholder col-5"></span>
                    </h5>
                    <span class="placeholder col-7"></span>
                </div>
            </div>
        </div>
    })}
</div>

<div class="d-flex justify-content-end mt-3">
    <Pagination page={page} link="/episode" />
</div>

<script>
    import {getUrl,getEpisode} from "../../global";
    const page = getUrl("page");
    const listEpisode = document.getElementById("list_episode");
    getEpisode(listEpisode,page);
</script>
