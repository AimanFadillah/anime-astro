---
import Navbar from "../components/static/Navbar.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Temukan anime terbaru dengan episode dan season lengkap hanya di Flictnime! Nikmati pengalaman nonton anime tanpa iklan yang mengganggu, dari episode pertama hingga episode terakhir, hanya di sini!">
	<meta property="og:title" content="Flictnime">
	<meta property="og:description" content="Temukan anime terbaru dengan episode dan season lengkap hanya di Flictnime! Nikmati pengalaman nonton anime tanpa iklan yang mengganggu, dari episode pertama hingga episode terakhir, hanya di sini!">
	<meta property="og:image" content="/icon/favicon-32x32.png">
	<meta property="og:url" content="https://flictnime.vercel.app">
	<meta name="twitter:title" content="Flictnime">
	<meta name="twitter:description" content="Temukan anime terbaru dengan episode dan season lengkap hanya di Flictnime! Nikmati pengalaman nonton anime tanpa iklan yang mengganggu, dari episode pertama hingga episode terakhir, hanya di sini!">
	<meta name="twitter:url" content="https://flictnime.vercel.app">
	<meta name="twitter:card" content="summary">
    <title>Flictnime | {title}</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/bootstrap/bootstrap.css">
	<link rel="canonical" href={Astro.url.href}>
	<link rel="icon" href="/favicon.ico" type="image/x-icon">
	<link rel="icon" href="icon/android-chrome-192x192.png" sizes="192x192" type="image/png">
  	<link rel="icon" href="icon/android-chrome-512x512.png" sizes="512x512" type="image/png">
	<link rel="icon" href="/icon/favicon-32x32.png" sizes="32x32" type="image/png">
	<link rel="icon" href="/icon/favicon-16x16.png" sizes="16x16" type="image/png">
	<link rel="apple-touch-icon" href="/icon/apple-touch-icon.png">
	<link rel="manifest" href="/icon/site.webmanifest">
    <script type="application/ld+json">
		{
		  "@context": "http://schema.org",
		  "@type": "Website",
		  "name": "Flictnime",
		  "url": "https://flictnime.vercel.app",
		  "description": "Temukan anime terbaru dengan episode dan season lengkap hanya di Flictnime! Nikmati pengalaman nonton anime tanpa iklan yang mengganggu, dari episode pertama hingga episode terakhir, hanya di sini!",
		  "publisher": {
			"@type": "Organization",
			"name": "Flictnime",
			"url": "https://flictnime.vercel.app"
		  },
		  "logo": "/icon/favicon-32x32.png"
		}
	</script>
</head>
  <!-- <body class="bg-body-tertiary" data-bs-theme="dark" > -->
  <body class="bg-body-tertiary">
	  <Navbar/>
	<div class="container">
		<slot/>
	</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>