---
import Navbar from "../components/static/Navbar.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Flictnime adalah Website nonton anime idaman tanpa iklan menyesatkan sudah pasti bikin kamu ketagihan">
	<meta property="og:title" content="Flictnime">
	<meta property="og:description" content="Flictnime adalah Website nonton anime idaman tanpa iklan menyesatkan sudah pasti bikin kamu ketagihan">
	<meta property="og:image" content="/images/naruto.png">
	<meta property="og:url" content="https://flictnime.vercel.app">
	<meta name="twitter:title" content="Flictnime">
	<meta name="twitter:description" content="Flictnime adalah Website nonton anime idaman tanpa iklan menyesatkan sudah pasti bikin kamu ketagihan">
	<meta name="twitter:url" content="https://flictnime.vercel.app">
	<meta name="twitter:card" content="summary">
    <title>Flictnime | {title}</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/bootstrap/bootstrap.css">
	<link rel="canonical" href={Astro.url.href}>
    <script type="application/ld+json">
		{
		  "@context": "http://schema.org",
		  "@type": "Website",
		  "name": "Flictnime",
		  "url": "https://flictnime.vercel.app",
		  "description": "Flictnime adalah Website nonton anime idaman tanpa iklan menyesatkan sudah pasti bikin kamu ketagihan",
		  "publisher": {
			"@type": "Organization",
			"name": "Flictnime",
			"url": "https://flictnime.vercel.app"
		  },
		  "logo": "/images/naruto.png"
		}
	</script>
</head>
  <!-- <body class="bg-body-tertiary" data-bs-theme="dark" > -->
  <body class="bg-body-tertiary">
	  <Navbar/>
	<div class="container">
		<slot/>
	</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>